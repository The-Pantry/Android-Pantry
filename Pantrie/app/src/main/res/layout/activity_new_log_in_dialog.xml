<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#535354"
                tools:context="com.nicodangelo.pantrie.NewLogInDialog">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/usernameText"
        android:backgroundTint="#8B30EC"
        android:textColorHint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:textColorHint="#ffffff"
        android:hint="Password"
        android:backgroundTint="#8B30EC"
        android:layout_below="@+id/usernameText"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordCheckText"
        android:hint="Confirm Password"
        android:textColorHint="#ffffff"
        android:backgroundTint="#8B30EC"
        android:layout_below="@+id/passwordText"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createUser"
        android:layout_centerVertical="true"
        android:background="#8B30EC"
        android:layout_below="@+id/passwordCheckText"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
